% HECHOS DE LA BASE DE DATOS

% ESTRUCTURA DEL PREDICADO -> capital(x, y), y es la capital de x.

capital(antioquia, medellin).
capital(atlantico, barranquilla).
capital(vichada, 'puerto carreño').
capital(magdalena, 'santa marta').
capital(quindio, armenia).

% HECHOS  DEL EJERCICIO 2

% ESTRUCTURA DE LA CLÁUSLA -> actorPelicula(a, p), a actua en p

actorPelicula('tom hanks', 'forrest gump').
actorPelicula('tom hanks', naufrago).
actorPelicula('tom hanks', 'el codigo da vinci').
actorPelicula('audrey tautou', 'el codigo da vinci').
actorPelicula('audrey tautou', 'coco antes de chanel').
actorPelicula('will smith', focus).
actorPelicula('will smith', 'soy leyenda').
actorPelicula('will smith', 'en busca de la felicidad').
actorPelicula('jaden smith', 'en busca de la felicidad').
actorPelicula('james karen', 'en busca de la felicidad').

% REGLAS DE CONSULTAS

actorDosPeliculas('en busca de la felicidad', 'soy leyenda', A) :- actorPelicula(A, 'en busca de la felicidad'), actorPelicula(A, 'soy leyenda').




